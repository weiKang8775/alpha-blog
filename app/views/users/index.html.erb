<h1 class="heading text-center mt-3 display-4">Alpha Bloggers</h1>

<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<% @users.each do |user| %>
  <div class="row justify-content-md-center">
    <div class="container my-4 col-7">
      <div class="card text-center shadow bg-dark text-light">
        <div class="card-header font-italic">
          <%= link_to user.username, user_path(user) %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to gravatar_for(user, 150), user_path(user) %></h5>
          <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
          <%= link_to "View Profile", user_path(user), class: "btn btn-primary" %>
        </div>
        <div class="card-footer text-muted">
          Joined <%= time_ago_in_words(user.created_at) %> ago
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>