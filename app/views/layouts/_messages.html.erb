<div class="container">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, class: ["alert", "alert-#{name == "notice" ? "success" : "danger"}", "alert-dismissible", "fade", "show"], role: "alert" do %>
      <%= msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    <% end %>
  <% end %>
</div>
