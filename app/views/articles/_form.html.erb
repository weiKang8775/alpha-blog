<div class="row">
  <div class="container col-8">
    <%= render 'shared/error', obj: @article %>
    <%= form_with(model: @article, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Article title", required: "true" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control", rows: "7", placeholder: "Article description (max 512 characters)", required: "true" %>
      </div>
      <div class="form-group">
        <%= f.label :category %>
        <%= collection_select(:article, :category_ids, Category.all, :id, :name, { prompt: "Choose categories (Optional)" }, { multiple: true, class: "form-control col-4" }) %>
      </div>
      <%= f.submit class: "btn btn-outline-primary mr-2 d-inline-block" %>
      <%= link_to 'Cancel', articles_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>



